{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start Docusaurus",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "args": [
                "start"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Build Docusaurus",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "args": [
                "build"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Serve Docusaurus",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "args": [
                "serve"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Swizzle Docusaurus",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "args": [
                "swizzle"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Deploy (build + wrangler deploy)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "args": [
                "run",
                "deploy"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Preview (build + wrangler dev)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "args": [
                "run",
                "preview"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Typecheck (tsc)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "args": [
                "run",
                "typecheck"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}