{
  "extends": "@docusaurus/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@theme/*": [
        "src/theme/*"
      ],
      "@generated/*": [
        ".docusaurus/*"
      ],
      "@site/*": [
        "/*"
      ],
    }
  },
  "include": [
    "src",
    "docusaurus.config.ts",
    ".docusaurus",
    "docs/**/*.mdx",
    "blog/**/*.mdx",
    "src/types", "config/sidebars.ts", "config/theme", "config/future.ts", "config/site.ts",
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}